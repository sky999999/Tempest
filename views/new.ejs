<!doctype html>
<html>
  <head>
    <title>Log in to Tempest</title>
  </head>
  <body>
    <div class="container">
      <h1>Create a new room for discussion</h1>
      <br>
      <% if (message.length > 0) { %>
        <div class="alert alert-danger" role="alert">
          <%= message %>
        </div>
      <% } %>
      <form action="/new" method="POST">
        <div class="form-group">
          <label>Create a name for your new room</label>
          <input type="text" class="form-control" name="roomid" required>
        </div>
        <div class="form-group">
          <label>Choose whether you want your room to be public (can be accessed by anyone) or private</label>
          <select name="access" class="form-control">
            <option value="public" class="dropdown-item">Public</option>
            <option value="private" class="dropdown-item">Private</option>
          </select>
        </div>
        <div class="form-group">
          <label>Create a description for this room</label>
          <textarea name="description" rows="10" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
  </body>
</html>
